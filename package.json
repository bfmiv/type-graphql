{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "release": "lerna publish",
    "release:next": "lerna publish prerelease",
    "test": "jest --watch",
    "test:ci": "jest --coverage --verbose --ci -i",
    "build": "ttsc --build --force",
    "build:watch": "ttsc --build --watch",
    "lint:check": "eslint ./packages/**/*.{ts,tsx}",
    "lint:fix": "eslint --fix ./packages/**/*.{ts,tsx}",
    "format:check": "prettier --check ./packages/**/*.{ts,tsx}",
    "format:fix": "prettier --write ./packages/**/*.{ts,tsx}"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jest": "^23.1.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ttypescript": "~1.5.8",
    "typescript": "~3.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "packages/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "docs/**/*.md": [
      "prettier --write",
      "git add"
    ]
  }
}
